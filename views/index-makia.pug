extends layout.pug

block content
    h1.title COMMUNITIES
    div
        a.button-add(href="/add") Agregar
    section.container   
        if(data.length)
            each community in data   
                article.data  
                    h4.data-title Name:
                        p.data-content #{community.name}
                    h4.data-title Type: 
                        p.data-content #{community.type}
                    h4.data-title Description: 
                        p.data-content #{community.description}
                    div 
                        a.button-add.edit(href="/edit/" + community._id) Editar
                    p 
                        form(method="post", action="/delete/" + community._id)
                            input(type="hidden", name="_method", value="DELETE")
                            input.button-add.delete(type="button", value="Eliminar", onclick="eliminar(this)")
            script.
                function eliminar(input) {
                    var deleteOK = confirm('Â¿Esta seguro de eliminar el registro?');
                    return (deleteOK) ? input.parentNode.submit() : false;
                }
        else
            div No tienes contactos que mostrar
